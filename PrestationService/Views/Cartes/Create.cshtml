@model PrestationService.Models.Carte

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Home_layout.cshtml";
}

<hr />

<link href="~/Content/pay.css" rel="stylesheet">

<div class="container py-5">
    <!-- For demo purpose -->
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-6">Carte de credit</h1>
        </div>
    </div> <!-- End -->
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card ">
                <div class="card-header">

                    <!-- Credit card form content -->
                    <div class="tab-content">
                        <!-- credit card info-->
                        <div id="credit-card" class="tab-pane fade show active pt-3">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <label for="username">
                                        <h6>Type de paiement</h6>
                                    </label>
                                    <div>
                                        @Html.EnumDropDownListFor(model => model.typPay, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.typPay, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="typeCarte">
                                        <h6>Type de carte</h6>
                                    </label>
                                    <div>
                                        @Html.EnumDropDownListFor(model => model.typeCarte, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.typeCarte, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="cardNumber">
                                        <h6>Numero de carte</h6>
                                    </label>
                                    <div>
                                        @Html.EditorFor(model => model.numeroCarte, new { htmlAttributes = new { @class = "form-control", placeholder = "numero de carte valide" } })
                                        @Html.ValidationMessageFor(model => model.numeroCarte, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <label>
                                                <span class="hidden-xs">
                                                    <h6>Expiration Date</h6>
                                                </span>
                                            </label>
                                            <div>
                                                @Html.EditorFor(model => model.expiration, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.expiration, "", new { @class = "text-danger" })
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group mb-4">
                                            <label data-toggle="tooltip" title="Three digit CV code on the back of your card">
                                                <h6>CVV <i class="fa fa-question-circle d-inline"></i></h6>
                                            </label>
                                            <div>
                                                @Html.EditorFor(model => model.numeroCsv, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.numeroCsv, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="cardNumber">
                                        <h6>Avance</h6>
                                    </label>
                                    <div>
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.acompte)
                                            @Html.ValidationMessageFor(model => model.acompte, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <input type="submit" value="Create" class="subscribe btn btn-primary btn-block shadow-sm" onsubmit="event.preventDefault()" />

                                </div>

                            }
                        </div>
                    </div> <!-- End -->

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>



